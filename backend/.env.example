# Server configuration
PORT=4000
NODE_ENV=development

# Database configuration (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Tip: use `localhost` when running the API locally; use `db` when running inside Docker.
DATABASE_URL="postgresql://docker:docker@localhost:5432/myapp?schema=public"

# API configuration
API_BASE_URL=http://localhost:${PORT}/api/v1
REQUEST_BODY_LIMIT=64kb
URL_ENCODED_PARAMETER_LIMIT=50

# Security secrets (replace in production)
JWT_SECRET=replace_with_a_secure_secret
COOKIE_SECRET=replace_with_a_secure_cookie_secret
REFRESH_TOKEN_TTL_DAYS=7
PASSWORD_RESET_TTL_MINUTES=60
OTP_TTL_SECONDS=300
OTP_LENGTH=6
OTP_DELIVERY_STRATEGY=console

# Google OAuth configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/google/callback
GOOGLE_SUCCESS_REDIRECT=http://localhost:3001/dashboard
GOOGLE_FAILURE_REDIRECT=http://localhost:3001/login?error=google_oauth_failed
